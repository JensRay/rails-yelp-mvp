<div class="container mt-5">
  <p>
  <strong>Name:</strong>
  <%= @restaurant.name %>
  </p>

  <p>
    <strong>Address:</strong>
    <%= @restaurant.address %>
  </p>

  <p>
    <strong>Phone Number:</strong>
    <%= @restaurant.phone_number %>
  </p>

  <p>
    <strong>Category:</strong>
    <%= @restaurant.category %>
  </p>
</div>

<div class="container mt-4">
  <h4>Reviews</h4>
  <ul>
    <% @restaurant.reviews.each do |review| %>
      <% rating = review.rating.to_i %>
      <li class="d-flex justify-content-start ml-0">
      <% rating.times do %>
          <span><i class="fas fa-star text-warning"></i></span>
      <% end %>
      <% (5 - rating).times do %>
        <span><i class="far fa-star text-warning"></i></span>
      <% end %>
        </li>
      <li>
      <p class=""> <%= review.content %></p>
      </li>
    <% end %>
  </ul>
</div>

<div class="container mt-4">
  <h4>Write a review for <%= @restaurant.name %></h4>
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <div class="form-inputs">
      <%= f.input :rating, collection: 1..5 %>
      <%= f.input :content %>
    </div>
    <div class="form-actions btn btn-primary">
      <%= f.submit class: 'btn btn-primary' %>
    </div>
  <% end %>

  <p class="mt-2"><%= link_to 'Back', restaurants_path %></p>

</div>

