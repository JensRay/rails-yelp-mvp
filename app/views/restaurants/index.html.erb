<table class="container">
  <h1 class="mt-3 ml-5">Restaurants</h1>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Phone Number</th>
      <th>Category</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.address %></td>
        <td><%= restaurant.phone_number %></td>
        <td><%= restaurant.category %></td>
        <td><%= link_to 'Show', restaurant_path(restaurant.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<p class="ml-5 mt-3"><%= link_to 'Add a restaurant', new_restaurant_path %></p>

